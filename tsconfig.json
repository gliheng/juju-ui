{
  "compilerOptions": {
    "baseUrl": "./",
    "incremental": true,
    "target": "es5",
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ]
}
