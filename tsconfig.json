{
  "compilerOptions": {
    "baseUrl": "./src",
    "removeComments": true,
    "target": "esnext",
    "downlevelIteration": true,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "lib": ["es2017", "dom"],
    "module": "esnext",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "@assets/*": ["./assets/*"],
      "@directives/*": ["./directives/*"],
      "@utils/*": ["./utils/*"],
      "@/*": ["./components/*"]
    },
    "declaration": true,
    "declarationDir": "./dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
